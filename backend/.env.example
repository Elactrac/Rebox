DATABASE_URL="postgresql://postgres:password@localhost:5432/rebox?schema=public"
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
PORT=5001
NODE_ENV=development

# Frontend URL for CORS and email links
FRONTEND_URL=http://localhost:3000

# OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Google reCAPTCHA Configuration
RECAPTCHA_SITE_KEY="your-recaptcha-site-key"
RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"

# Email Configuration (for Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="ReBox <noreply@rebox.eco>"

# Redis Configuration (optional - falls back to in-memory cache)
REDIS_URL=redis://localhost:6379
CACHE_ENABLED=true

# Push Notifications (VAPID keys)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
# Force redeploy Wed Dec  3 21:15:40 IST 2025
